---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Contact from "../components/Contact.astro";

const projects = [
  {
    title: "Project Alpha",
    description:
      "A full-stack web application built with React and Node.js. Features real-time data synchronization and a modern UI.",
    tags: ["React", "Node.js", "MongoDB", "Socket.io"],
    link: "#",
    image: null, // Placeholder for valid usage
  },
  {
    title: "E-Commerce Dashboard",
    description:
      "Admin dashboard for an e-commerce platform. Includes analytics visualization, product management, and order tracking.",
    tags: ["Vue.js", "Firebase", "Tailwind CSS"],
    link: "#",
    image: null,
  },
  {
    title: "AI Chat Interface",
    description:
      "An intelligent chat interface utilizing OpenAI's API. Supports context retention, code highlighting, and markdown rendering.",
    tags: ["Next.js", "OpenAI API", "TypeScript"],
    link: "#",
    image: null,
  },
  {
    title: "Mobile Fitness App",
    description:
      "Cross-platform mobile application for tracking workouts and nutrition. built with React Native.",
    tags: ["React Native", "Redux", "Express"],
    link: "#",
    image: null,
  },
];
---

<Layout title="Portfolio | Saim Sohail">
  <Header />
  <main>
    <section class="section portfolio-hero">
      <div class="container">
        <h1 class="page-title">
          My <span class="gradient-text">Portfolio</span>
        </h1>
        <p class="page-desc">
          A selection of projects that showcase my passion for building digital
          experiences.
        </p>
      </div>
    </section>

    <section class="section projects-grid-section">
      <div class="container">
        <div class="projects-grid">
          {
            projects.map((project) => (
              <div class="project-card glass">
                <div class="card-content">
                  <h3 class="project-title">{project.title}</h3>
                  <p class="project-desc">{project.description}</p>
                  <div class="tags">
                    {project.tags.map((tag) => (
                      <span class="tag">{tag}</span>
                    ))}
                  </div>
                  <a href={project.link} class="btn-link">
                    View Project &rarr;
                  </a>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <Contact />
  </main>
</Layout>

<style>
  .portfolio-hero {
    padding-top: 120px;
    padding-bottom: 3rem;
    text-align: center;
  }

  .page-title {
    font-size: 3.5rem;
    font-weight: 800;
    margin-bottom: 1rem;
    color: var(--text-color);
  }

  .page-desc {
    font-size: 1.25rem;
    color: var(--text-muted);
    max-width: 600px;
    margin: 0 auto;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2rem;
  }

  .project-card {
    border-radius: var(--radius-md);
    padding: 2rem;
    border: 1px solid var(--glass-border);
    transition:
      transform 0.3s ease,
      border-color 0.3s ease;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .project-card:hover {
    transform: translateY(-5px);
    border-color: var(--primary-color);
  }

  .project-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: var(--text-color);
  }

  .project-desc {
    color: var(--text-muted);
    font-size: 1rem;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 2rem;
  }

  .tag {
    font-size: 0.8rem;
    padding: 0.25rem 0.75rem;
    border-radius: 50px;
    background: rgba(var(--primary-rgb), 0.1); /* fallback if not defined */
    background: rgba(139, 92, 246, 0.1);
    color: var(--primary-color);
    font-weight: 500;
  }

  .btn-link {
    display: inline-block;
    color: var(--primary-color);
    font-weight: 600;
    text-decoration: none;
    transition: margin-left 0.3s ease;
  }

  .btn-link:hover {
    margin-left: 5px;
  }

  @media (max-width: 768px) {
    .page-title {
      font-size: 2.5rem;
    }

    .projects-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
